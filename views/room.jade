extends layout

block head
  link(rel='stylesheet' href='/easyrtc-api/easyrtc.css')
  link(rel='stylesheet' href='/stylesheets/room.css')
  link(rel='stylesheet' href='/stylesheets/video.css')

block content
  .room-top-bar
    span.room-title= room_id
    if is_private
      .is-private &#128274;
  .dynamic-view
    include dynamic-view
  .action-buttons
    a.btn.btn-secondary(role="button" href="/lobby") Leave Room
  
block javascript
  script(src='/socket.io/socket.io.js')
  script(src='/easyrtc-api/adapter.js')
  script(src='/easyrtc-api/easyrtc.js')
  script(src="/script/dynamic-view.js")
  script appInit("#{ room_id }")
